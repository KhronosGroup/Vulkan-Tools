        }
      ],
      "cmake_options" : [
        "-DBUILD_TESTS=NO"
      ]
    }
  ],
  "install_names" : {
      "glslang" : "GLSLANG_INSTALL_DIR",
      "Vulkan-Headers" : "VULKAN_HEADERS_INSTALL_DIR",
